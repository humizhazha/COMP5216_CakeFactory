<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Step0Activity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:src="@drawable/main_page"
                    android:scaleType="centerCrop"/>

            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <custom_font.MyTextView_Roboto_Bold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cake Design 101"
                        android:layout_marginTop="4dp"
                        android:textSize="25sp"
                        android:textColor="#1f2833"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:src="@drawable/marshmallow"/>
            </LinearLayout>


            <custom_font.MyTextView_Roboto_Bold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESCRIPTION"
                android:textSize="10sp"
                android:textColor="#1f2833"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"/>


            <custom_font.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1f2833"
                android:textSize="13sp"
                android:lineSpacingExtra="2dp"
                android:text="It's a online platform for you to design the cakes you want, by selecting cake size, shape, flavor, filling, frosting or topping on our phone application."
                android:layout_margin="12dp"/>

            <custom_font.Button_Roboto_Medium
                android:id="@+id/startDesign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Design"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                android:layout_margin="12sp"
                android:padding="12dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/red_rect"
                android:textAllCaps="false"/>
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
